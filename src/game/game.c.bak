#include "game.h"

int	game_main(int argc)
{
	t_data	*data;

	if (argc == 2)
	{	
		data = init_argumet();	// init the data structure
		start_the_game(data);	// start the game
	}
	else
		ft_putstr_fd("madre mia\n", 1);
	return (0);
}

